{
    "url": "https://github.com/mnivet/RightKeyboard/releases/download/1.3/RightKeyboard-1.3.zip",
    "version": "1.3",
    "license": "GPL-3.0",
    "homepage": "https://github.com/mnivet/RightKeyboard",
    "shortcuts": [
        [
            "RightKeyboard.exe",
            "RightKeyboard"
        ]
    ],
    "post_install": [
        "$startupPath = [Environment]::GetFolderPath('Startup')",
        "$shortcutPath = Join-Path $startupPath 'RightKeyboard.lnk'",
        "$WshShell = New-Object -ComObject WScript.Shell",
        "$shortcut = $WshShell.CreateShortcut($shortcutPath)",
        "$shortcut.TargetPath = \"$dir\\RightKeyboard.exe\"",
        "$shortcut.Save()",
        "Write-Host 'Created shortcut in Startup folder at: ' + $shortcutPath",
    ],
    "uninstaller": {
        "post_uninstall": [
            "$startupPath = [Environment]::GetFolderPath('Startup')",
            "$shortcutPath = Join-Path $startupPath 'RightKeyboard.lnk'",
            "if (Test-Path $shortcutPath) { Remove-Item $shortcutPath }",
            "Write-Host 'Removed shortcut in Startup folder at: ' + $shortcutPath",
        ]
    },
    "checkver": {
        "github": "https://github.com/mnivet/RightKeyboard"
    },
    "autoupdate": {
        "url": "https://github.com/mnivet/RightKeyboard/releases/download/v$version/RightKeyboard-v$version.zip"
    }
}
